<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="presentacion.FormularioController" 
      spacing="15" alignment="CENTER" 
      style="-fx-padding: 30; -fx-background-color: #f5f5f5;">

    <Label text="Formulario de Registro" 
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <ScrollPane VBox.vgrow="ALWAYS" hbarPolicy="NEVER" 
                style="-fx-background-color: transparent;">
        <VBox fx:id="fieldsContainer" spacing="15" alignment="CENTER" 
              style="-fx-padding: 10;"/>
    </ScrollPane>

    <HBox spacing="20" alignment="CENTER">
        <Button text="Aceptar" onAction="#handleAccept" 
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 10 30;"/>
        <Button text="Cancelar" onAction="#handleCancel" 
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 10 30;"/>
    </HBox>

</VBox>
