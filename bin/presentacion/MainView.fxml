<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="presentacion.MainController">
    <top>
        <ToolBar>
            <Button text="Nuevo" onAction="#handleNuevo" />
            <Button text="Editar" onAction="#handleEditar" />
            <Button text="Eliminar" onAction="#handleEliminar" />
            <Button text="Leer por PK" onAction="#handleReadByPk" />   <!-- NUEVO BOTÓN -->
            <Separator orientation="VERTICAL" />
            <Button text="⟳" onAction="#handleRefresh" />
            <Separator orientation="VERTICAL" />
            <Label text="Buscar:" />
            <TextField fx:id="txtBuscar" promptText="Valor a buscar" />
            <Button text="Buscar" onAction="#handleBuscar" />   <!-- CORREGIDO: antes era handleBuscarCampo -->
        </ToolBar>
    </top>
    <center>
        <TableView fx:id="tableView" />
    </center>
    <bottom>
        <HBox spacing="8" padding="8">
            <Label fx:id="lblStatus" text="Estado" />
        </HBox>
    </bottom>
</BorderPane>